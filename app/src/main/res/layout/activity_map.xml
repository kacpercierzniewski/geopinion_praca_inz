<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:id="@+id/map_activity"
>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mapwithmarker.MapsMarkerActivity" />
    <Button android:text="@string/expressOpinion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/expressOpinionButton"
        android:onClick="onButtonClick" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
        android:elevation="0dp" android:enabled="false" />
</RelativeLayout>