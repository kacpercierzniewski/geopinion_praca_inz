<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacper.geopinion.MenuActivity">
    <RatingBar android:layout_width="291dp"
        android:layout_height="57dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:id="@+id/ratingBar" android:numStars="6"
        app:layout_constraintRight_toLeftOf="@+id/ETexpressOpinion"
        app:layout_constraintLeft_toRightOf="@+id/ETexpressOpinion" app:layout_constraintHorizontal_bias="0.499" />


    <EditText android:layout_width="336dp"
        android:layout_height="138dp" android:id="@+id/ETexpressOpinion"
        android:layout_margin="8dp"
        android:hint="@string/writeOpinion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
        android:layout_marginBottom="280dp"
        android:layout_marginLeft="8dp" android:layout_marginRight="8dp" />
    <Button android:id="@+id/BexpressOpinion" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="@string/sendOpinion"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETexpressOpinion" android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" android:layout_marginTop="212dp" app:layout_constraintHorizontal_bias="0.502"
        android:onClick="onButtonClick" />


   </android.support.constraint.ConstraintLayout>
